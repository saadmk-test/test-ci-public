
{
  "commit_changelog": true,
  "comment_changelog": true,
  "changelog_type": "pull_request",
  "header_prefix": "Release:",
  "pull_request_title_regex": "^Release",
  "unlabeled_group_title": "New Changes",
  "include_unlabeled_changes": true,
  "group_config": [
    {
      "title": "Bug Fixes",
      "labels": ["bug", "bugfix"]
    },
    {
      "title": "Improvements to Code",
      "labels": ["improvements", "enhancement"]
    },
    {
      "title": "New Features",
      "labels": ["feature"]
    },
    {
      "title": "Documentation Updates",
      "labels": ["docs", "documentation", "doc"]
    }
  ]
}
